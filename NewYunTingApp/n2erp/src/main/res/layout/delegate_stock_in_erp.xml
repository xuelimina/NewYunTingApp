<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/tb_top"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentTop="true"
        android:background="@color/app_main_background_erp">

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/back"
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="8dp"
            android:paddingBottom="10dp"
            android:paddingTop="20dp"
            android:src="@drawable/back" />

        <android.support.v7.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="入库"
            android:textColor="@android:color/white"
            android:textSize="25sp" />
    </android.support.v7.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tb_top">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.LinearLayoutCompat
                android:id="@+id/view_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <android.support.v7.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp">

                        <android.support.v7.widget.AppCompatTextView
                            android:id="@+id/tv_category_title"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_centerVertical="true"
                            android:gravity="center"
                            android:text="品类"
                            android:textColor="@android:color/black"
                            android:textSize="15sp" />

                        <android.support.v7.widget.LinearLayoutCompat
                            android:id="@+id/select_category_layout"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:layout_toLeftOf="@+id/btn_add_category"
                            android:layout_toRightOf="@+id/tv_category_title"
                            android:background="@drawable/edit_view_circle">

                            <android.support.v7.widget.AppCompatTextView
                                android:id="@+id/tv_select_category_name"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="8"
                                android:gravity="center|left"
                                android:paddingLeft="5dp"
                                android:textColor="@android:color/black"
                                android:textSize="15sp" />

                            <com.joanzapata.iconify.widget.IconTextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="@color/app_main_background_erp"
                                android:gravity="center"
                                android:text="{fa-chevron-down}"
                                android:textColor="@android:color/white"
                                android:textSize="20sp" />

                        </android.support.v7.widget.LinearLayoutCompat>

                        <android.support.v7.widget.AppCompatButton
                            android:id="@+id/btn_add_category"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_alignParentRight="true"
                            android:background="@color/app_main_background_erp"
                            android:gravity="center"
                            android:padding="10dp"
                            android:text="添加选择"
                            android:textColor="@android:color/white"
                            android:textSize="15sp" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/category_layout"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginTop="10dp"
                        android:visibility="gone">

                        <android.support.v7.widget.AppCompatTextView
                            android:id="@+id/tv_add_category_title"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_centerVertical="true"
                            android:gravity="center"
                            android:text="品类"
                            android:textColor="@android:color/white"
                            android:textSize="15sp" />


                        <android.support.v7.widget.AppCompatEditText
                            android:id="@+id/et_category"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:layout_toLeftOf="@+id/btn_add_category_ok"
                            android:layout_toRightOf="@+id/tv_add_category_title"
                            android:background="@drawable/edit_view_circle"
                            android:gravity="center|left"
                            android:inputType="text"
                            android:padding="5dp"
                            android:textColor="@android:color/black"
                            android:textSize="15sp" />

                        <android.support.v7.widget.AppCompatButton
                            android:id="@+id/btn_add_category_ok"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginRight="10dp"
                            android:layout_toLeftOf="@+id/btn_add_category_cancel"
                            android:background="@color/app_main_background_erp"
                            android:gravity="center"
                            android:padding="10dp"
                            android:text="确定"
                            android:textColor="@android:color/white"
                            android:textSize="15sp" />

                        <android.support.v7.widget.AppCompatButton
                            android:id="@+id/btn_add_category_cancel"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_alignParentRight="true"
                            android:background="@color/app_main_background_erp"
                            android:gravity="center"
                            android:padding="10dp"
                            android:text="取消"
                            android:textColor="@android:color/white"
                            android:textSize="15sp" />
                    </RelativeLayout>
                </android.support.v7.widget.LinearLayoutCompat>

                <android.support.v7.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp">

                        <android.support.v7.widget.AppCompatTextView
                            android:id="@+id/tv_brand_title"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_centerVertical="true"
                            android:gravity="center"
                            android:text="品牌"
                            android:textColor="@android:color/black"
                            android:textSize="15sp" />

                        <android.support.v7.widget.LinearLayoutCompat
                            android:id="@+id/select_brand_layout"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:layout_toLeftOf="@+id/btn_add_brand"
                            android:layout_toRightOf="@+id/tv_brand_title"
                            android:background="@drawable/edit_view_circle">

                            <android.support.v7.widget.AppCompatTextView
                                android:id="@+id/tv_select_brand_name"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="8"
                                android:gravity="center|left"
                                android:paddingLeft="5dp"
                                android:textColor="@android:color/black"
                                android:textSize="15sp" />

                            <com.joanzapata.iconify.widget.IconTextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="@color/app_main_background_erp"
                                android:gravity="center"
                                android:text="{fa-chevron-down}"
                                android:textColor="@android:color/white"
                                android:textSize="20sp" />

                        </android.support.v7.widget.LinearLayoutCompat>

                        <android.support.v7.widget.AppCompatButton
                            android:id="@+id/btn_add_brand"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_alignParentRight="true"
                            android:background="@color/app_main_background_erp"
                            android:gravity="center"
                            android:padding="10dp"
                            android:text="添加选择"
                            android:textColor="@android:color/white"
                            android:textSize="15sp" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/brand_layout"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginTop="10dp"
                        android:visibility="gone">

                        <android.support.v7.widget.AppCompatTextView
                            android:id="@+id/tv_add_brand_title"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_centerVertical="true"
                            android:gravity="center"
                            android:text="品牌"
                            android:textColor="@android:color/white"
                            android:textSize="15sp" />

                        <android.support.v7.widget.AppCompatEditText
                            android:id="@+id/et_brand"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:layout_toLeftOf="@+id/btn_add_brand_ok"
                            android:layout_toRightOf="@+id/tv_add_brand_title"
                            android:background="@drawable/edit_view_circle"
                            android:gravity="center|left"
                            android:inputType="text"
                            android:padding="5dp"
                            android:textColor="@android:color/black"
                            android:textSize="15sp" />

                        <android.support.v7.widget.AppCompatButton
                            android:id="@+id/btn_add_brand_ok"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginRight="10dp"
                            android:layout_toLeftOf="@+id/btn_add_brand_cancel"
                            android:background="@color/app_main_background_erp"
                            android:gravity="center"
                            android:padding="10dp"
                            android:text="确定"
                            android:textColor="@android:color/white"
                            android:textSize="15sp" />

                        <android.support.v7.widget.AppCompatButton
                            android:id="@+id/btn_add_brand_cancel"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_alignParentRight="true"
                            android:background="@color/app_main_background_erp"
                            android:gravity="center"
                            android:padding="10dp"
                            android:text="取消"
                            android:textColor="@android:color/white"
                            android:textSize="15sp" />
                    </RelativeLayout>
                </android.support.v7.widget.LinearLayoutCompat>

                <android.support.v7.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp">

                        <android.support.v7.widget.AppCompatTextView
                            android:id="@+id/tv_model_title"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_centerVertical="true"
                            android:gravity="center"
                            android:text="型号"
                            android:textColor="@android:color/black"
                            android:textSize="15sp" />

                        <android.support.v7.widget.LinearLayoutCompat
                            android:id="@+id/select_model_layout"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:layout_toLeftOf="@+id/btn_add_model"
                            android:layout_toRightOf="@+id/tv_model_title"
                            android:background="@drawable/edit_view_circle">

                            <android.support.v7.widget.AppCompatTextView
                                android:id="@+id/tv_select_model_name"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="8"
                                android:gravity="center|left"
                                android:paddingLeft="5dp"
                                android:textColor="@android:color/black"
                                android:textSize="15sp" />

                            <com.joanzapata.iconify.widget.IconTextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="@color/app_main_background_erp"
                                android:gravity="center"
                                android:text="{fa-chevron-down}"
                                android:textColor="@android:color/white"
                                android:textSize="20sp" />

                        </android.support.v7.widget.LinearLayoutCompat>

                        <android.support.v7.widget.AppCompatButton
                            android:id="@+id/btn_add_model"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_alignParentRight="true"
                            android:background="@color/app_main_background_erp"
                            android:gravity="center"
                            android:padding="10dp"
                            android:text="添加选择"
                            android:textColor="@android:color/white"
                            android:textSize="15sp" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/model_layout"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginTop="10dp"
                        android:visibility="gone">

                        <android.support.v7.widget.AppCompatTextView
                            android:id="@+id/tv_add_model_title"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_centerVertical="true"
                            android:gravity="center"
                            android:text="型号"
                            android:textColor="@android:color/white"
                            android:textSize="15sp" />

                        <android.support.v7.widget.AppCompatEditText
                            android:id="@+id/et_model"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:layout_toLeftOf="@+id/btn_add_model_ok"
                            android:layout_toRightOf="@+id/tv_add_model_title"
                            android:background="@drawable/edit_view_circle"
                            android:gravity="center|left"
                            android:inputType="text"
                            android:padding="5dp"
                            android:textColor="@android:color/black"
                            android:textSize="15sp" />

                        <android.support.v7.widget.AppCompatButton
                            android:id="@+id/btn_add_model_ok"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginRight="10dp"
                            android:layout_toLeftOf="@+id/btn_add_model_cancel"
                            android:background="@color/app_main_background_erp"
                            android:gravity="center"
                            android:padding="10dp"
                            android:text="确定"
                            android:textColor="@android:color/white"
                            android:textSize="15sp" />

                        <android.support.v7.widget.AppCompatButton
                            android:id="@+id/btn_add_model_cancel"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_alignParentRight="true"
                            android:background="@color/app_main_background_erp"
                            android:gravity="center"
                            android:padding="10dp"
                            android:text="取消"
                            android:textColor="@android:color/white"
                            android:textSize="15sp" />
                    </RelativeLayout>
                </android.support.v7.widget.LinearLayoutCompat>

                <android.support.v7.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp">

                        <android.support.v7.widget.AppCompatTextView
                            android:id="@+id/tv_product_name_title"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_centerVertical="true"
                            android:gravity="center"
                            android:text="名称"
                            android:textColor="@android:color/black"
                            android:textSize="15sp" />

                        <android.support.v7.widget.LinearLayoutCompat
                            android:id="@+id/select_product_name_layout"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:layout_toLeftOf="@+id/btn_add_product_name"
                            android:layout_toRightOf="@+id/tv_product_name_title"
                            android:background="@drawable/edit_view_circle">

                            <android.support.v7.widget.AppCompatTextView
                                android:id="@+id/tv_select_product_name"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="8"
                                android:gravity="center|left"
                                android:paddingLeft="5dp"
                                android:textColor="@android:color/black"
                                android:textSize="15sp" />

                            <com.joanzapata.iconify.widget.IconTextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="@color/app_main_background_erp"
                                android:gravity="center"
                                android:text="{fa-chevron-down}"
                                android:textColor="@android:color/white"
                                android:textSize="20sp" />

                        </android.support.v7.widget.LinearLayoutCompat>

                        <android.support.v7.widget.AppCompatButton
                            android:id="@+id/btn_add_product_name"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_alignParentRight="true"
                            android:background="@color/app_main_background_erp"
                            android:gravity="center"
                            android:padding="10dp"
                            android:text="添加选择"
                            android:textColor="@android:color/white"
                            android:textSize="15sp" />
                    </RelativeLayout>

                    <android.support.v7.widget.LinearLayoutCompat
                        android:id="@+id/product_name_layout"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:layout_marginTop="10dp"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <android.support.v7.widget.LinearLayoutCompat
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:orientation="horizontal">

                            <android.support.v7.widget.LinearLayoutCompat
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:orientation="horizontal">

                                <android.support.v7.widget.AppCompatTextView
                                    android:id="@+id/tv_add_product_name_title"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_centerVertical="true"
                                    android:gravity="center"
                                    android:text="名称"
                                    android:textColor="@android:color/black"
                                    android:textSize="15sp" />

                                <android.support.v7.widget.AppCompatEditText
                                    android:id="@+id/et_product_name"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginLeft="5dp"
                                    android:layout_marginRight="5dp"
                                    android:layout_toLeftOf="@+id/btn_add_product_name_ok"
                                    android:layout_toRightOf="@+id/tv_add_product_name_title"
                                    android:background="@drawable/edit_view_circle"
                                    android:gravity="center|left"
                                    android:inputType="text"
                                    android:padding="5dp"
                                    android:textColor="@android:color/black"
                                    android:textSize="15sp" />


                            </android.support.v7.widget.LinearLayoutCompat>

                            <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:orientation="horizontal">

                                <android.support.v7.widget.AppCompatTextView
                                    android:id="@+id/tv_standard_title"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_alignParentLeft="true"
                                    android:layout_centerVertical="true"
                                    android:gravity="center"
                                    android:text="规格"
                                    android:textColor="@android:color/black"
                                    android:textSize="15sp" />

                                <android.support.v7.widget.AppCompatEditText
                                    android:id="@+id/et_standard"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginLeft="5dp"
                                    android:layout_marginRight="5dp"
                                    android:layout_toLeftOf="@+id/tv_standard_right"
                                    android:layout_toRightOf="@+id/tv_standard_title"
                                    android:background="@drawable/edit_view_circle"
                                    android:gravity="center|left"
                                    android:inputType="numberDecimal"
                                    android:padding="5dp"
                                    android:textColor="@android:color/black"
                                    android:textSize="15sp" />

                                <android.support.v7.widget.AppCompatTextView
                                    android:id="@+id/tv_standard_right"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_alignParentRight="true"
                                    android:gravity="center"
                                    android:text="米"
                                    android:textColor="@android:color/black"
                                    android:textSize="15sp" />
                            </RelativeLayout>

                        </android.support.v7.widget.LinearLayoutCompat>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:orientation="horizontal">

                            <android.support.v7.widget.AppCompatButton
                                android:id="@+id/btn_add_product_name_ok"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginRight="10dp"
                                android:layout_marginTop="5dp"
                                android:layout_toLeftOf="@+id/btn_add_product_name_cancel"
                                android:background="@color/app_main_background_erp"
                                android:gravity="center"
                                android:paddingLeft="10dp"
                                android:paddingRight="10dp"
                                android:text="确定"
                                android:textColor="@android:color/white"
                                android:textSize="15sp" />

                            <android.support.v7.widget.AppCompatButton
                                android:id="@+id/btn_add_product_name_cancel"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_alignParentRight="true"
                                android:layout_marginTop="5dp"
                                android:background="@color/app_main_background_erp"
                                android:gravity="center"
                                android:paddingLeft="10dp"
                                android:paddingRight="10dp"
                                android:text="取消"
                                android:textColor="@android:color/white"
                                android:textSize="15sp" />

                        </RelativeLayout>

                    </android.support.v7.widget.LinearLayoutCompat>
                </android.support.v7.widget.LinearLayoutCompat>

                <android.support.v7.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp">

                        <android.support.v7.widget.AppCompatTextView
                            android:id="@+id/tv_count_title"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_centerVertical="true"
                            android:gravity="center"
                            android:text="录入数量"
                            android:textColor="@android:color/black"
                            android:textSize="15sp" />

                        <android.support.v7.widget.AppCompatEditText
                            android:id="@+id/et_count"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:layout_toLeftOf="@+id/select_unit_layout"
                            android:layout_toRightOf="@+id/tv_count_title"
                            android:background="@drawable/edit_view_circle"
                            android:inputType="numberDecimal"
                            android:paddingLeft="5dp"
                            android:textColor="@android:color/black"
                            android:textSize="15sp" />

                        <android.support.v7.widget.LinearLayoutCompat
                            android:id="@+id/select_unit_layout"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_alignParentRight="true"
                            android:background="@color/app_main_background_erp"
                            android:orientation="horizontal">

                            <android.support.v7.widget.AppCompatTextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:paddingLeft="5dp"
                                android:text="卷"
                                android:textColor="@android:color/white"
                                android:textSize="20sp" />

                            <com.joanzapata.iconify.widget.IconTextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:text="{fa-chevron-down}"
                                android:textColor="@android:color/white"
                                android:textSize="20sp" />
                        </android.support.v7.widget.LinearLayoutCompat>
                    </RelativeLayout>

                </android.support.v7.widget.LinearLayoutCompat>

                <android.support.v7.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:orientation="vertical">

                    <android.support.v7.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:orientation="vertical">

                        <android.support.v7.widget.AppCompatTextView
                            android:id="@+id/tv_info_title"
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:layout_centerVertical="true"
                            android:gravity="center"
                            android:text="备注"
                            android:textColor="@android:color/black"
                            android:textSize="15sp" />

                        <android.support.v7.widget.AppCompatEditText
                            android:id="@+id/et_info"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:layout_marginTop="5dp"
                            android:background="@drawable/edit_view_circle"
                            android:gravity="center|left"
                            android:hint="无"
                            android:inputType="text"
                            android:padding="5dp"
                            android:paddingLeft="5dp"
                            android:textColor="@android:color/black"
                            android:textColorHint="@android:color/black"
                            android:textSize="15sp" />
                    </android.support.v7.widget.LinearLayoutCompat>

                </android.support.v7.widget.LinearLayoutCompat>
            </android.support.v7.widget.LinearLayoutCompat>

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/btn_entry_material"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_below="@+id/view_layout"
                android:layout_centerHorizontal="true"
                android:background="@color/app_main_background_erp"
                android:gravity="center"
                android:paddingBottom="15dp"
                android:paddingLeft="50dp"
                android:paddingRight="50dp"
                android:paddingTop="15dp"
                android:text="确定"
                android:textColor="@android:color/white"
                android:textSize="15sp" />
        </RelativeLayout>
    </ScrollView>


    <android.support.v7.widget.LinearLayoutCompat
        android:id="@+id/linear_layout_select"
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:layout_alignParentBottom="true"
        android:background="@android:color/white"
        android:orientation="vertical"
        android:visibility="gone">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tv_select_title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:gravity="center"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:textColor="@android:color/black"
                android:textSize="20sp" />

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/rv_select_cancel"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:background="@color/app_main_background_erp"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="取消"
                android:textColor="@android:color/white"
                android:textSize="13sp" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/black" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_select"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible" />
    </android.support.v7.widget.LinearLayoutCompat>
</RelativeLayout>